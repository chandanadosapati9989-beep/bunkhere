<script>
  // Page navigation
  function showPage(id){
    document.querySelectorAll('section').forEach(s=>s.style.display='none');
    document.getElementById(id).style.display='block';
  }

  // Registration & OTP
  function sendOTP(){
    const name=document.getElementById("fullname").value.trim();
    const email=document.getElementById("email").value.trim();
    const phone=document.getElementById("phone").value.trim();
    if(!name||!email||!phone){alert("Please fill all fields!");return;}
    if(!/^[0-9]{10}$/.test(phone)){alert("Invalid phone number.");return;}
    alert("OTP sent! (Use 1234 for demo)");
    document.getElementById("otp-section").style.display="block";
  }

  function verifyOTP(){
    const otp=document.getElementById("otp").value.trim();
    if(otp==="1234"){alert("OTP Verified ‚úÖ");showPage("order");}
    else alert("Invalid OTP ‚ùå");
  }

  // Payment method dynamic fields
  function showPaymentFields(){
    const m=document.getElementById("payment-method").value;
    const f=document.getElementById("payment-fields");
    f.innerHTML="";
    if(["Credit Card","Debit Card"].includes(m)){
      f.innerHTML=`<input placeholder="Card Number" maxlength="16">
                   <input placeholder="Name on Card">
                   <input placeholder="MM/YY">
                   <input placeholder="CVV" maxlength="3">`;
    } else if(["UPI","Google Pay","Phone Pay"].includes(m)){
      f.innerHTML=`<input placeholder="Enter UPI ID (example@upi)">`;
    }
  }

  // Order summary with date validation
  function generateSummary(){
    const date=document.getElementById("date").value;
    const today=new Date().toISOString().split('T')[0];
    if(date<today){alert("‚ö†Ô∏è Past date! Choose today or future.");return;}
    const ids=["fuel-pump","fuel-type","quantity","city","area","landmark","colony","street","pincode","date","payment-method"];
    for(let id of ids){if(!document.getElementById(id).value.trim()){alert("Fill all fields!");return;}}
    let summary="";
    ids.forEach(id=>{summary+=`<p><b>${id.replace("-"," ").toUpperCase()}:</b> ${document.getElementById(id).value}</p>`;});
    document.getElementById("summary-content").innerHTML=summary;
    showPage("order-summary");
  }

  // GPS tracking
  let map, marker, watchId;
  function startTracking(){
    const mapDiv=document.getElementById("gprs-map");
    mapDiv.style.display="block";
    if(navigator.geolocation){navigator.geolocation.getCurrentPosition(initMap,err=>alert(err.message));}
  }
  function initMap(pos){
    const loc={lat:pos.coords.latitude,lng:pos.coords.longitude};
    map=new google.maps.Map(document.getElementById("gprs-map"),{center:loc,zoom:15});
    marker=new google.maps.Marker({position:loc,map:map,title:"You are here!",animation:google.maps.Animation.DROP});
    watchId=navigator.geolocation.watchPosition(p=>marker.setPosition({lat:p.coords.latitude,lng:p.coords.longitude}));
  }

  function showSuccessMessage(){
    alert("‚úÖ Fuel Delivered Successfully!");
    if(watchId) navigator.geolocation.clearWatch(watchId);
    showPage('rating');
  }

  // Rating system
  let userRating=0;
  function setRating(r){
    userRating=r;
    document.querySelectorAll('#stars .star').forEach((s,i)=>s.classList.toggle('highlighted',i<r));
    document.getElementById('rating-text').textContent=`You rated ${r} star${r>1?'s':''}`;
  }

  function submitRating(){
    if(!userRating){alert("Please rate!");return;}
    alert(`Thank you for rating us ${userRating}‚≠ê!`);
    showPage('home');
  }

  // --- Detect Offline/Online ---
  function updateNetworkStatus(){
    const alertBox=document.getElementById("offline-alert");
    if(navigator.onLine){
      alertBox.style.display="none";
    } else {
      alertBox.style.display="block";
    }
  }

  window.addEventListener('online',updateNetworkStatus);
  window.addEventListener('offline',updateNetworkStatus);
  updateNetworkStatus();
</script>

